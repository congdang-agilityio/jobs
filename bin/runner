#!/usr/bin/env ruby
$:.unshift( File.expand_path('../lib/workers', File.dirname(__FILE__)) )
$:.unshift( File.expand_path('../initializers', File.dirname(__FILE__)) )

require 'bundler/setup'
require 'sneakers'
require 'sneakers/runner'
require "send_sms"
require "twilio"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

Sneakers.configure(
  amqp: ENV['RABBITMQ_URL'],
  daemonize: false,
  log: STDOUT)

Sneakers.logger.level = Logger::INFO

r = Sneakers::Runner.new([ SendSmsWorker ])
r.run
